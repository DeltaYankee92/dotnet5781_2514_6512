<Window x:Class="dotnet5781_03B_2514_6512.ChooseBusToDrive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet5781_03B_2514_6512"
        mc:Ignorable="d"
        Title="SendBus:" Height="166.4" Width="450">
    <Grid>
        <TextBox x:Name="DistanceTextBox" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" TextWrapping="Wrap" BorderThickness="0" Text="Enter Distance:" VerticalAlignment="Top" Width="175" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
        <TextBox x:Name="DistanceInputBox" HorizontalAlignment="Left" Height="35" Margin="190,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" FontSize="20" TextChanged="DistanceInputBox_TextChanged"/>
        <Button x:Name="Send" Content="Send to drive" HorizontalAlignment="Left" Margin="255,80,0,0" VerticalAlignment="Top" Width="178" Height="47" Click="Send_Click"/>

    </Grid>
</Window>
